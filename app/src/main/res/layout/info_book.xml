<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="20dp"
            android:text="Book Name"
            android:textColor="@color/darkBlue"
            android:textSize="35sp"
            android:layout_alignParentStart="true" />

        <com.example.elifcaliskan.yky.Information
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kategori"/>
        <com.example.elifcaliskan.yky.Information
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/kategori"
            android:id="@+id/yazar"
            android:layout_toEndOf="@id/kategori" />
        <com.example.elifcaliskan.yky.Information
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kategori"
            android:id="@+id/hazırlayan"/>
        <com.example.elifcaliskan.yky.Information
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hazırlayan"
            android:id="@+id/isbn"
            android:layout_toEndOf="@id/hazırlayan" />
        <com.example.elifcaliskan.yky.Information
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hazırlayan"
            android:id="@+id/sayfa_sayısı"/>
        <com.example.elifcaliskan.yky.Information
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sayfa_sayısı"
            android:id="@+id/olcu"
            android:layout_toEndOf="@id/sayfa_sayısı" />
        <com.example.elifcaliskan.yky.Information
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sayfa_sayısı"
            android:id="@+id/yky_ilk_baski"/>
        <com.example.elifcaliskan.yky.Information
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/yky_ilk_baski"
            android:id="@+id/tekrar_baski"
            android:layout_toEndOf="@id/yky_ilk_baski" />



    </RelativeLayout>
</ScrollView>