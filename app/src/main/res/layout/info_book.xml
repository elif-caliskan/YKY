<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="20dp"
            android:text="Book Name"
            android:textColor="@color/darkBlue"
            android:textSize="40sp"
            android:layout_alignParentStart="true" />

        <com.example.elifcaliskan.yky.Information
            android:id="@+id/text1"
            android:layout_width="200dp"
            android:layout_height="@dimen/info_height"
            android:layout_below="@id/book_name"
            android:tag="1"
            android:visibility="invisible"
            />

        <com.example.elifcaliskan.yky.Information
            android:id="@+id/text2"
            android:layout_width="200dp"
            android:layout_height="@dimen/info_height"
            android:layout_below="@id/book_name"
            android:layout_toRightOf="@id/text1"
            android:tag="2"
            android:visibility="invisible"/>
        <com.example.elifcaliskan.yky.Information
            android:id="@+id/text3"
            android:layout_width="200dp"
            android:layout_height="@dimen/info_height"
            android:layout_below="@id/text1"
            android:tag="3"
            android:visibility="invisible"/>

        <com.example.elifcaliskan.yky.Information
            android:id="@+id/text4"
            android:layout_width="200dp"
            android:layout_height="@dimen/info_height"
            android:layout_below="@id/text2"
            android:layout_toRightOf="@id/text3"
            android:tag="4"
            android:visibility="invisible" />
        <com.example.elifcaliskan.yky.Information
            android:id="@+id/text5"
            android:layout_width="200dp"
            android:layout_height="@dimen/info_height"
            android:layout_below="@id/text3"
            android:tag="5"
            android:visibility="invisible"/>

        <com.example.elifcaliskan.yky.Information
            android:id="@+id/text6"
            android:layout_width="200dp"
            android:layout_height="@dimen/info_height"
            android:layout_below="@id/text4"
            android:layout_toRightOf="@id/text5"
            android:tag="6"
            android:visibility="invisible"/>
        <com.example.elifcaliskan.yky.Information
            android:id="@+id/text7"
            android:layout_width="200dp"
            android:layout_height="@dimen/info_height"
            android:layout_below="@id/text5"
            android:tag="7"
            android:visibility="invisible"/>

        <com.example.elifcaliskan.yky.Information
            android:id="@+id/text8"
            android:layout_width="200dp"
            android:layout_height="@dimen/info_height"
            android:layout_below="@id/text6"
            android:layout_toRightOf="@id/text7"
            android:tag="8"
            android:visibility="invisible"/>
        <com.example.elifcaliskan.yky.Information
            android:id="@+id/text9"
            android:layout_width="200dp"
            android:layout_height="@dimen/info_height"
            android:layout_below="@id/text7"
            android:tag="9"
            android:visibility="invisible"/>

        <com.example.elifcaliskan.yky.Information
            android:id="@+id/text10"
            android:layout_width="200dp"
            android:layout_height="@dimen/info_height"
            android:layout_below="@id/text8"
            android:layout_toRightOf="@id/text9"
            android:tag="10"
            android:visibility="invisible"/>
        <com.example.elifcaliskan.yky.Information
            android:id="@+id/text11"
            android:layout_width="200dp"
            android:layout_height="@dimen/info_height"
            android:layout_below="@id/text10"
            android:tag="11"
            android:visibility="invisible"/>

        <com.example.elifcaliskan.yky.Information
            android:id="@+id/text12"
            android:layout_width="200dp"
            android:layout_height="@dimen/info_height"
            android:layout_below="@id/text10"
            android:layout_toRightOf="@id/text11"
            android:tag="12"
            android:visibility="invisible"/>


    </RelativeLayout>
</ScrollView>